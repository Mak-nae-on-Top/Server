<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maknaeontop.communication.mapper.UserMapper">
    <select id="selectUser" resultType="hashMap">
        SELECT * from user;
    </select>

    <select id="selectPwUsingId" resultType="String">
        SELECT User_pw FROM user WHERE (User_id = #{id});
    </select>

    <insert id="addUser">
        INSERT INTO user (User_id, User_pw, Authority) VALUES (#{id}, #{pw}, #{authority});
    </insert>

    <select id="countSameId" resultType="int">
        SELECT COUNT(*) FROM user WHERE (User_id = #{id});
    </select>
</mapper>
