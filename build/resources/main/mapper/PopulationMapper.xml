<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maknaeontop.communication.mapper.PopulationMapper">
    <select id="selectAllUserLocation" resultType="hashMap">
        SELECT * from population;
    </select>

    <select id="selectByUuid" resultType="hashMap">
        SELECT * from population WHERE uuid = #{uuid};
    </select>

    <select id="selectLocationById" resultType="hashMap">
        SELECT x, y, z from population WHERE id = #{id};
    </select>

    <insert id="insertUserLocation">
        INSERT INTO population VALUES (#{id}, #{uuid}, #{x}, #{y}, #{z});
    </insert>
</mapper>