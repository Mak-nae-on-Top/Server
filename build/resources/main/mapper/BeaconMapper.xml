<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maknaeontop.communication.mapper.BeaconMapper">
    <select id="selectAllBeacons" resultType="hashMap">
        SELECT * from beacon;
    </select>

    <select id="selectBeaconsUsingUUID" resultType="hashMap">
        SELECT * FROM beacon WHERE (uuid = #{uuid});
    </select>

    <select id="getLocation" resultType="hashMap">
        SELECT major, minor, x, y, z FROM beacon WHERE (uuid = #{uuid} and major = #{major} and minor = #{minor});
    </select>

    <select id="addBeacon" resultType="hashMap">
        INSERT INTO beacon VALUES (#{uuid}, #{major}, #{minor}, #{x}, #{y});
    </select>
</mapper>
