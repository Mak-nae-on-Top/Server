<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maknaeontop.communication.mapper.BeaconMapper">
    <select id="selectAllBeacons" resultType="hashMap">
        SELECT * from beacon;
    </select>

    <select id="selectBeaconsUsingUUID" resultType="hashMap">
        SELECT * FROM beacon WHERE (uuid = #{uuid});
    </select>

    <select id="selectLocation" resultType="hashMap">
        SELECT x, y, floor FROM beacon WHERE (uuid = #{uuid} and major = #{major} and minor = #{minor});
    </select>

    <insert id="addBeacon">
        INSERT INTO beacon VALUES (#{uuid}, #{major}, #{minor}, #{x}, #{y}, #{floor});
    </insert>

    <select id="selectFloor" resultType="hashMap">
        SELECT floor FROM beacon WHERE (uuid = #{uuid} and major = #{major} and minor = #{minor});
    </select>

    <select id="selectMaxXYByUuidAndFloor" resultType="hashMap">
        SELECT MAX(x), MAX(y) FROM beacon WHERE (uuid = #{uuid} and floor = #{floor});
    </select>
    
    <delete id="deleteByUuidAndFloor">
        DELETE FROM beacon WHERE(uuid = #{uuid} and floor = #{floor});
    </delete>
</mapper>
